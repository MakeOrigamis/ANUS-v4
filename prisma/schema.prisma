// Prisma Schema for ANUS Substrate
// Database: PostgreSQL (or SQLite for development)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ═══════════════════════════════════════════════════════════════════════════════
// NextAuth.js Models
// ═══════════════════════════════════════════════════════════════════════════════

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ═══════════════════════════════════════════════════════════════════════════════
// User Model - Core Identity
// ═══════════════════════════════════════════════════════════════════════════════

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts Account[]
  sessions Session[]
  project  Project?
}

// ═══════════════════════════════════════════════════════════════════════════════
// Project Model - 1:1 with User
// ═══════════════════════════════════════════════════════════════════════════════

model Project {
  id                  String   @id @default(cuid())
  userId              String   @unique
  tokenMintAddress    String
  encryptedPrivateKey String   @db.Text  // Dev wallet private key (encrypted)
  initialLiquidity    Float
  isInitialized       Boolean  @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // PARRY Config (JSON stored as text - includes strategy toggles, thresholds, etc)
  parryConfig         String?  @db.Text
  
  // API Keys (all encrypted)
  encryptedDeepseekKey     String?  @db.Text
  encryptedTwitterApiKey   String?  @db.Text
  encryptedTwitterSecret   String?  @db.Text
  encryptedTwitterAccessToken  String?  @db.Text
  encryptedTwitterAccessSecret String?  @db.Text
  
  // Custom AI Personality
  customPersonality   String?  @db.Text
  
  // Auto-claim settings
  autoClaimEnabled    Boolean  @default(false)
  autoClaimInterval   Int      @default(60) // minutes

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  wallets Wallet[]
}

// ═══════════════════════════════════════════════════════════════════════════════
// Wallet Model - 1:N with Project (Operational Wallets with Private Keys)
// ═══════════════════════════════════════════════════════════════════════════════

model Wallet {
  id                  String   @id @default(cuid())
  projectId           String
  address             String   // Public address (derived from private key)
  encryptedPrivateKey String   @db.Text // Encrypted private key for market-making operations
  label               String?
  isActive            Boolean  @default(true)
  createdAt           DateTime @default(now())

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

